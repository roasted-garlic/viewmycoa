modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Flask Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "FLASK_APP=app.py flask db upgrade && python main.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flask Server"

[[workflows.workflow]]
name = "Sync Images"
author = 27469103

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python sync_images.py"

[[workflows.workflow]]
name = "Sync PDFs"
author = 27469103

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python sync_pdfs.py"

[[workflows.workflow]]
name = "Run Manual Sync"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python startup_sync.py"

[[workflows.workflow]]
name = "Run Scheduled Sync"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python scheduled_sync.py 15"

[deployment]
run = ["sh", "-c", "REPLIT_DEPLOYMENT=1 python main.py"]

[[ports]]
localPort = 3000
externalPort = 80
