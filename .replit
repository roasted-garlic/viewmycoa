
modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Flask Server"

[[workflows.workflow]]
name = "Flask Server"
mode = "sequential"
author = "agent"

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "FLASK_APP=app.py flask db upgrade"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Flask Server"
mode = "parallel"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "FLASK_APP=app.py flask db upgrade && python main.py"
waitForPort = 3000

[[workflows.workflow]]
name = "Database Backup"
author = 27469103

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python backup.py"

[deployment]
run = ["sh", "-c", "FLASK_APP=app.py flask db upgrade && python main.py"]

[[ports]]
localPort = 5000
externalPort = 80
