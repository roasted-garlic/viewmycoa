modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Flask Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "FLASK_APP=app.py flask db upgrade && python main.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flask Server"

[[workflows.workflow]]
name = "Sync Images"
author = 27469103

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python sync_images.py"

[[workflows.workflow]]
name = "Sync PDFs"
author = 27469103

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python sync_pdfs.py 100"

[[workflows.workflow]]
name = "Sync Single Product"
author = 27469103

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -c 'import sys; prod_id = input(\"Enter product ID to sync: \"); from sync_images import sync_product_images; from sync_pdfs import sync_product_pdfs; print(f\"Syncing product ID {prod_id}...\"); sync_product_images([int(prod_id)]); sync_product_pdfs([int(prod_id)]); print(\"Sync complete.\")'"

[deployment]
run = ["sh", "-c", "REPLIT_DEPLOYMENT=1 python main.py"]

[[ports]]
localPort = 3000
externalPort = 80
